@model School.web.ViewModel.EditCity

<h3>Edit Country</h3>

<form method="post" id="frmcedit" class="form-control">
    <div class="row">
        
        <div class="col-md-10">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label>Country</label>
                <select name="CountryId" class="form-control">
                    @foreach (var item in Model.Available)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Name</label>
                <input name="Name" value="@Model.Name" class="form-control" />
            </div>
           
        </div>
        </div>
    
    <div class="row">
        <div class="col-md-2">
            <button type="button" id="btnupto" class="btn btn-default"> <i class="fa fa-wrench" aria-hidden="true"></i>Save</button>
        </div>
    </div>
</form>

<script>
     $("#btnupto").click(function () {

       $.ajax({
            type: 'POST',
            url: '@Url.Action("Edit","City")',
            data: $("#frmcedit").serialize()

        }).done(function (response) {
            $("#tblcat").html(response);
            $("#newatncon").html("");
            window.location = "@Url.Action("Index", "Country")";


        }).fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("Fut");
        });

    });
</script>
